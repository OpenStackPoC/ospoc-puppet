#!/bin/bash

SERVICES=" mysqld \
openstack-cinder-api \
openstack-cinder-scheduler \
openstack-cinder-volume \
openstack-glance-api \
openstack-glance-registry \
openstack-glance-scrubber \
openstack-keystone \
openstack-nova-cert \
openstack-nova-conductor \
openstack-nova-console \
openstack-nova-consoleauth \
openstack-nova-novncproxy \
openstack-nova-objectstore \
openstack-nova-scheduler \
openstack-nova-xvpvncproxy \
quantum-dhcp-agent \
quantum-l3-agent \
quantum-metadata-agent \
quantum-openvswitch-agent \
quantum-ovs-cleanup \
quantum-server \
rabbitmq-server \
"

PKGS="mysql-server rabbitmq-server"
PKGS=" ${PKGS} $(rpm -qa | grep ^openstack )"
PKGS=" ${PKGS} $(rpm -qa | grep ^quantum )"

DIRS="mysql nova cinder quantum keystone glance"

for SVC in ${SERVICES}; do
   service ${SVC} stop
done

yum -y remove ${PKGS}

for DIR in ${DIRS}; do 
   rm -rf /var/lib/${DIR}
   rm -rf /etc/${DIR}/*
   rm -rf /var/log/${DIR}
done

rm -f /etc/my.cnf /root/.my.cnf 
rm -f /root/openrc

